<form action="/category/<%= category.id %>/edit" method="post">
    <div class="container mt-5">
        <div class="row">
            <div class="col-lg-6">
                <div class="mb-3">
                    <label for="nama" class="form-label">Name</label>
                    <input type="text" class="form-control" id="nama" placeholder="Masukkan nama kategori" name="name" value="<%= category.name %>">
                </div>
            <div class="col-lg-12">
                <button type="submit" class="btn btn-primary float-end">Update</button>
            </div>
        </div>
    </div>
</form>




